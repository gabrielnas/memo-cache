{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**.js"
  ]
}